{
  "name": "nexwork-desktop",
  "version": "1.0.11",
  "description": "Desktop application for Nexwork - Multi-repository feature management",
  "main": "dist-electron/main/index.js",
  "author": "Nexwork Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "tsc && vite build && electron-builder --win",
    "build:linux": "tsc && vite build && electron-builder --linux",
    "build:all": "tsc && vite build && electron-builder -mwl",
    "dist": "npm run build",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.1.7",
    "multi-repo-orchestrator": "file:../multi-repo-orchestrator",
    "node-pty": "^1.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "antd": "^5.12.8",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "lucide-react": "^0.312.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "zustand": "^4.5.0"
  },
  "build": {
    "appId": "com.nexwork.desktop",
    "productName": "Nexwork",
    "copyright": "Copyright Â© 2026 Nexwork Team",
    "directories": {
      "output": "release/${version}",
      "buildResources": "build"
    },
    "files": [
      "dist-electron",
      "dist",
      "public"
    ],
    "extraResources": [
      {
        "from": "public/Nexwork Background Removed.png",
        "to": "icon.png"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png",
      "artifactName": "${productName}_${version}_macOS.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": null,
      "signIgnore": [
        "node_modules"
      ]
    },
    "npmRebuild": true,
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.png",
      "sign": false
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}_Windows.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nexwork"
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}_Linux.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "Ambot9",
      "repo": "nexwork-desktop"
    }
  }
}
